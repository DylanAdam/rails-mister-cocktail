<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1490048807374-acde8ef855cc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80');">
		<div class="banner-content">
	    <h1>Discover our cocktails</h1>   
	    <a href="#cards" class="btn-medium">Get drunk</a>
  	</div>
</div>

<div class="container">
	<div class="row">
		<% @cocktails.each do |cocktail| %>
			<% if cocktail.photo.present? %>
				<div class="col-xs-12 col-sm-4">
					<div data-aos="flip-down" class="card" id="cards" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo %>');">
						<%= link_to edit_cocktail_path(cocktail) do  %>
						<div class="edit-btn"><i class="fas fa-edit"></i></div>
						<% end %>
						<div class="card-category">Popular</div>
							<div class="card-description">
								<h2> <%= cocktail.name %></h2>
							</div> 
							<a href="/cocktails/<%= cocktail.id %>" class="card-link"></a>
					   </div>
					</div>
			<% end %>				
		<% end %>
	</div>
</div>

